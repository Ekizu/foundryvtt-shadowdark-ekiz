<div
	class="shadowdark chat-card item-card"
	data-actor-id="{{actor._id}}"
	data-item-id="{{item._id}}"
>
	<header class="card-header flexrow">
		<img src="{{item.img}}" data-tooltip="{{item.name}}"/>
		<h3 class="item-name">{{item.name}}</h3>
	</header>

	<div class="card-content">
		<h3 class="light-source-name">
			1 {{item.name}} shooted.
		</h3>
		{{#ifCond remainingAmmo '>' 5}}
			<p>
				Remaining {{item.name}}: {{remainingAmmo}}.
			</p>
		{{else}}
			<p>
				<span style="color:red">Remaining {{item.name}}: {{remainingAmmo}}.</span>
			</p>
		{{/if}}
	</div>
</div>
