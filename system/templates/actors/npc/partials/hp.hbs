<div class="value-box__bold">
	<label
		class="hp-header hp rollable"
		data-tooltip="{{localize 'SHADOWDARK.sheet.npc.roll_hp'}}"
	>
		{{localize 'SHADOWDARK.sheet.actor.hp'}}
	</label>
	<div class="hit-points">
		<div class="hp-value">
			{{numberInput
				actor.system.attributes.hp.value
				name="system.attributes.hp.value"
				class="hp-value"
				placeholder="0"
			}}
		</div>
		<div class="hp-max">
			<p>{{localize 'SHADOWDARK.sheet.actor.hp_max'}}</p>
			{{numberInput
				actor.system.attributes.hp.max
				name="system.attributes.hp.max"
				class="hp-max"
				placeholder="0"
				step="1"
			}}
		</div>
	</div>
</div>
