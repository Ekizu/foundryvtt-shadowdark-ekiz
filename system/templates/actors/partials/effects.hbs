<section class="tab tab-effects" data-group="primary" data-tab="tab-effects">
	<div class="SD-banner">Effects and Conditions</div>

	{{#each effects as |section sid|}}
		<ol class="SD-list">
			<li class="header">
				<div class="item-name">{{section.label}}</div>
				<div class="duration">{{localize 'SHADOWDARK.item.npc_attack_type'}}</div>
			</li>
			{{#each section.items as |effect|}}
				<li class="item" data-item-id="{{effect._id}}" data-uuid="Actor.{{../actor._id}}.Item.{{effect._id}}">
					<div class="item-image" style="background-image: url({{effect.img}})">
						<i class="fas fa-comment fa-lg"></i>
					</div>
					<a class="item-name" data-action="show-details">
						{{effect.name}}
					</a>
					<div class="duration">
						{{#ifEq effect.system.duration.type "unlimited" }}
							<i class="fas fa-infinity"></i>
						{{else}}
							<i class="fas fa-clock"></i>
						{{/ifEq}}
					</div>
				</li>
			{{/each}}
		</ol>
	{{/each}}

</section>
