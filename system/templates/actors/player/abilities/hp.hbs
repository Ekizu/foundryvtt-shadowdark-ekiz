<div class="SD-box">
	<div class="header">
		<label>{{localize 'SHADOWDARK.sheet.actor.hp'}}</label>
		<span></span>
	</div>
	<div class="context">
		<div class="hp-value">
			{{numberInput
				actor.system.attributes.hp.value
				name="system.attributes.hp.value"
				placeholder="0"
			}}
		</div>
		<div class="hp-max">
			{{localize 'SHADOWDARK.sheet.actor.hp_max'}}
			{{numberInput
				maxHp
				name="system.attributes.hp.max"
				placeholder="0"
				step="1"
			}}
		</div>
	</div>
</div>
