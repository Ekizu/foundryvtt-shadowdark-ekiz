<section class="tab tab-abilities" data-group="primary" data-tab="tab-abilities">
	<div class="abilities-grid">
		<div class="grid-2-columns">
			{{> actors/player/abilities/hp }}
			<div class="grid-colspan-2">
				<button type="button" data-action="pc-rest">{{localize "SHADOWDARK.sheet.general.rest"}}</button>
			</div>
			{{> actors/player/abilities/ac }}
			{{> actors/player/abilities/luck }}
			{{> actors/player/abilities/stats }}
		</div>
		<div class="grid-1-columns">
			{{> actors/player/abilities/attacks }}
			{{#if hasClassAbilities}}
				{{> actors/player/abilities/class }}
			{{/if}}
		</div>
	</div>
</section>
