<form class="level-up" autocomplete="off">
	<h1>{{actor.name}}</h1>
	Leveling up to level {{targetLevel}}
	{{!-- Hit Points --}}
	<div class="box-style">
		<div class="header">
			<label>Hit Points</label>
			<span>{{class.system.hitPoints}}</span>
		</div>
		<div class="content ">
			<button type="button" data-action="roll-hp">Roll HP</button>
		</div>
	</div>

	{{!-- Talents --}}
	<div class="box-style">
		<div class="header">
			<label>Talents</label>
			<span><a class="fas fa-table-list" data-action="view-talent-table"></a></span>
		</div>
		<div class="content ">
			{{#unless talentGained}}
				No talents gained at this level
			{{/unless}}
			{{#if talentGained}}
				<button type="button" data-action="roll-talent">Roll talent</button>
			{{/if}}
			{{#each talents}}
				{{this.name}}
			{{/each}}
		</div>
	</div>

	{{!-- Spells --}}
	{{#if isSpellCaster}}
	<div class="box-style">
		<div class="header">
			<label>Spells</label>
			<span></span>
		</div>
		<div class="content ">
			Tier 1: Choose 1
			{{#each spells}}
				{{this.name}}
			{{/each}}
		</div>
	</div>
	{{/if}}
	<button class="level-up-button" type="button" data-action="finalize-level-up">Level Up!</button>
</form>
