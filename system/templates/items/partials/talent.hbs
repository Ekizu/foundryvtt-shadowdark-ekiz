<div class="talent-properties">
	<div class="talent-property">
		<label>{{localize 'SHADOWDARK.item.talent_class'}}</label>
		<select name="system.talentClass">
			{{selectOptions
				config.TALENT_CLASSES
				selected=system.talentClass
				localize=false
			}}
		</select>
	</div>
	{{#ifEq system.talentClass "level"}}
		<div class="talent-property">
			<label>{{localize 'SHADOWDARK.item.level'}}</label>
			{{numberInput
				item.system.level
				name="system.level"
				placeholder="0"
			}}
		</div>
	{{/ifEq}}
</div>
<div class="talent-properties">
	<div class="talent-property talent-effects">
		<label>{{localize "SHADOWDARK.talent.type.title"}}</label>
		<p
			class="item-property-list talent-type"
			{{#unless editable}}disabled{{/unless}}
		>
			{{talentEffectsDisplay}}
		</p>
	</div>
</div>
