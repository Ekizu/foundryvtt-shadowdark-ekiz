<div class="slots">
	<label>{{localize 'SHADOWDARK.item.inventory_quantity'}}</label>
	{{numberInput
		item.system.quantity
		name="system.quantity"
		placeholder="0"
	}}
	<label>{{localize 'SHADOWDARK.item.inventory_slots'}}</label>
	{{numberInput
		item.system.slots.slots_used
		name="system.slots.slots_used"
		placeholder="0"
	}}
	<label>{{localize 'SHADOWDARK.item.inventory_per_slot'}}</label>
	{{numberInput
		item.system.slots.per_slot
		name="system.slots.per_slot"
		placeholder="0"
	}}
	<label>{{localize 'SHADOWDARK.item.inventory_free_carry'}}</label>
	{{numberInput
		item.system.slots.free_carry
		name="system.slots.free_carry"
		placeholder="0"
	}}
</div>
