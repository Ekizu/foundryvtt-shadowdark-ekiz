<ol class="items-list effects-list">
{{#each effects as |section sid|}}
{{#unless section.hidden}}
  <li class="items-header flexrow" data-effect-type="{{section.type}}">
    <h3 class="effect-source effect-name flexrow">{{section.label}}</h3>
    <div class="effect-source">Source</div>
    <div class="effect-source">Duration</div>
    <div class="item-controls effect-controls flexrow">
      {{#if @root.editable}}
      <a class="effect-control" data-action="create" data-tooltip="SHADOWDARK.effect.create">
        <i class="fas fa-plus"></i> Add
      </a>
      {{/if}}
    </div>
  </li>

  {{#if section.info}}
    <ol class="info">
      {{#each section.info}}
        <li class="notification info">{{this}}</li>
      {{/each}}
    </ol>
  {{/if}}

  <ol class="item-list">
    {{#each section.effects as |effect|}}
      <li class="item effect flexrow" data-effect-id="{{effect.id}}">
        <div class="item-name effect-name flexrow">
          <img class="item-image" src="{{effect.icon}}"/>
          <h4>{{fromConfig "TALENT_TYPES" effect.label}}</h4>
        </div>
        <div class="effect-source">{{effect.sourceName}}</div>
        <div class="item-controls effect-controls flexrow">
          {{#if @root.editable}}
          <a class="effect-control" data-action="edit" data-tooltip="SHADOWDARK.effect.edit">
            <i class="fas fa-edit"></i>
          </a>
          <a class="effect-control" data-action="delete" data-tooltip="SHADOWDARK.effect.delete">
            <i class="fas fa-trash"></i>
          </a>
          {{/if}}
        </div>
      </li>
    {{/each}}
  </ol>
{{/unless}}
{{/each}}
</ol>